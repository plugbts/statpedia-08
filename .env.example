# Example environment variables for statpedia-08

# Supabase (frontend only)
VITE_SUPABASE_PROJECT_ID=
VITE_SUPABASE_PUBLISHABLE_KEY=
VITE_SUPABASE_URL=

# Database (Neon/Postgres)
# Prefer NEON_DATABASE_URL; DATABASE_URL is accepted as fallback for local dev
NEON_DATABASE_URL=
DATABASE_URL=

# Hasura
HASURA_GRAPHQL_ENDPOINT=
HASURA_GRAPHQL_ADMIN_SECRET=

# Auth
# Required for local auth server and Cloudflare worker to sign JWTs
JWT_SECRET=
# Optional: access token lifetime (e.g., '15m')
JWT_EXPIRES_IN=
# Optional: refresh token expiration in days
REFRESH_TOKEN_EXPIRES_DAYS=

# Local API port for dev auth server
API_PORT=3001

# SportsGameOdds (live market data)
# Required to fetch live props from SGO; otherwise dev fallback data is used
SPORTSGAMEODDS_API_KEY=
